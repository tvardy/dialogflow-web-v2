<configuration>
  <system.webServer>

    <!-- GZip compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    <httpCompression>
      <dynamicTypes>
        <clear />
        <add enabled="false" mimeType="*/*" />
        <add enabled="true" mimeType="text/*" />
        <add enabled="true" mimeType="message/*" />
        <add enabled="true" mimeType="application/x-javascript" />
        <add enabled="true" mimeType="application/javascript" />
        <add enabled="true" mimeType="application/json" />
        <add enabled="true" mimeType="application/atom+xml" />
        <add enabled="true" mimeType="application/atom+xml;charset=utf-8" />
        <add enabled="true" mimeType="image/svg+xml" />
        <add enabled="true" mimeType="application/font-woff" />
        <add enabled="true" mimeType="application/x-font-ttf" />
        <add enabled="true" mimeType="application/octet-stream" />
      </dynamicTypes>
      <staticTypes>
        <clear />
        <add enabled="false" mimeType="*/*" />
        <add enabled="true" mimeType="text/*" />
        <add enabled="true" mimeType="message/*" />
        <add enabled="true" mimeType="application/javascript" />
        <add enabled="true" mimeType="application/atom+xml" />
        <add enabled="true" mimeType="application/xaml+xml" />
        <add enabled="true" mimeType="application/json" />
        <add enabled="true" mimeType="image/*" />
        <add enabled="true" mimeType="image/svg+xml" />
        <add enabled="true" mimeType="application/font-woff" />
        <add enabled="true" mimeType="application/x-font-ttf" />
        <add enabled="true" mimeType="application/octet-stream" />
      </staticTypes>
    </httpCompression>
    <!-- /GZip compression -->

    <!-- MIME Types -->
    <staticContent>
      <!-- In case IIS already has this mime type -->
      <remove fileExtension=".svg" />
      <remove fileExtension=".eot" />
      <remove fileExtension=".woff" />
      <remove fileExtension=".woff2" />
      <remove fileExtension=".ttf" />
      <remove fileExtension=".json" />
      <!-- Set proper mime types -->
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml"  />
      <mimeMap fileExtension=".eot" mimeType="application/vnd.ms-fontobject" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      <mimeMap fileExtension=".woff2" mimeType="application/font-woff" />
      <mimeMap fileExtension=".ttf" mimeType="application/vnd.ms-opentype" />
      <mimeMap fileExtension=".json" mimeType="application/json" />

      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="999:00:00" />
    </staticContent>
    <!-- /MIME Types -->

    <!-- BASIC SECURITY SETTINGS -->
    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By"/>
        <clear />
        <add name="X-Xss-Protection" value="1; mode=block" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="Strict-Transport-Security" value="max-age=31536000" />
        
        <!--<add name="Content-Security-Policy" value="default-src 'self';" />-->

        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET" />
      </customHeaders>
    </httpProtocol>

    <security>
      <requestFiltering removeServerHeader="true" />
    </security>
    <!-- /BASIC SECURITY SETTINGS -->

  </system.webServer>

  <system.web>
    <httpRuntime enableVersionHeader="false" />
  </system.web>
</configuration>
